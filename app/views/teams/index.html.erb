<h1>Listing teams</h1>
<%= link_to 'New team', new_team_path %> 
<table>
  <tr>
    <th>Team name</th>
    <th>Sport</th>
    <th>Number required to play</th>
  </tr>
 
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= team.sport %></td>
      <td><%= team.number_required_to_play %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
      <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <td><%= link_to 'Destroy', team_path(team),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>