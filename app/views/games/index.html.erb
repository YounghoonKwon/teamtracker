<h1>Listing games</h1>
<%= link_to 'New game', new_game_path %>
<table>
  <tr>
    <th>Game location</th>
    <th>Game date and time</th>
    <th>Home</th>
    <th>Away</th>
  </tr>

  <% @games.each do |game| %>
    <tr>
      <td><%= game.location %></td>
      <td><%= game.date %></td>
      <td><%= game.home_team %></td>
      <td><%= game.away_team %></td>
      <td><%= link_to 'Show', game_path(game) %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game_path(game),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
